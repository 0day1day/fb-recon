# !/usr/bin/env python

import httplib2
import json

def user2uid(uname):
    h = httplib2.HTTP(".cache")
    resp, cont = h.request("http://graph.facebook.com/" + uname + "/")
    data = json.loads(cont.decode(encoding="UTF-8"))
    if data["code"] == 803:
        print data["message"]
        return None
    else:
        return data["id"]

from getpass import getpass
from selenium import webdriver

def getCredentials():
    creds = []
    creds.append(input("FB Username: "))
    creds.append(getpass())
    creds.append(input("Access Token: "))    
    return creds

def login(driver):
    driver.get('https://www.facebook.com/')
    assert "Welcome to Facebook" in driver.title
    creds = getCredentials()
    driver.find_element_by_id('email').send_keys(creds[0])
    driver.find_element_by_id('pass').send_keys(creds[1])
    driver.find_element_by_id('loginbutton').click()


login(webdriver.Firefox())
